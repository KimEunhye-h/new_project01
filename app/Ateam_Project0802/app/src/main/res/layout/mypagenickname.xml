<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/block_color4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="45dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#fff"
        android:gravity="center|top">


        <Button
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:background="@drawable/nick_img"
            android:layout_marginTop="90dp"
            android:layout_weight="20"/>



        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="닉네임 변경"
            android:textColor="@color/colorMain"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/notosansb"
            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="235dp"
            android:layout_height="0dp"
            android:hint="닉네임을 입력해주세요"
            android:paddingLeft="10dp"
            android:textColorHint="#F7D6D6D6"
            android:backgroundTint="@color/colorMain"
            android:inputType="textPersonName"
            android:gravity="center"
            android:layout_weight="20"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosansb"
            />

        <Button
            android:id="@+id/button101"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:background="@drawable/block_color4_radius_line"
            android:textSize="20dp"
            android:text="변경하기"
            android:textColor="@color/colorMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.624"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosansb"
            android:layout_weight="10"
            style="?android:attr/borderlessButtonStyle"/>

        <!--<TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*닉네임 변경은 5분뒤 적용됩니다."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.702" />-->


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>