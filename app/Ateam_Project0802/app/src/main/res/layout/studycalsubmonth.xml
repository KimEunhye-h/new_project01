<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/studycal_month_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/back_view3">

        </Button>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text=" 이번 달 공부 기록"
            android:textSize="20sp"
            android:gravity="center|left"
            android:background="@drawable/block_color4"
            android:fontFamily="@font/notosansb"
            android:textColor="#fff"
            android:layout_weight="8.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="530dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/stroke_bottom"
        android:layout_marginTop="30dp"
        android:elevation="0dp">


        <TextView
            android:id="@+id/monthTv"
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="월 공부시간"
            android:fontFamily="@font/notosansb"
            android:textColor="#ffF"
            android:layout_gravity="center"
            android:background="@color/colorMain"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:elevation="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:background="@drawable/stroke_bottom"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">



                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:background="#fff"
                        android:elevation="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="250dp"
                            android:layout_height="35dp"
                            android:background="@color/colorMain"
                            android:layout_gravity="center"
                            android:fontFamily="@font/notosansb"
                            android:gravity="center"
                            android:text="총 공부 시간"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="250dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/colorMain"
                            android:textSize="30dp"
                            android:fontFamily="@font/pen"
                            android:background="@drawable/stroke_top_bottom"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:elevation="0dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="250dp"
                            android:layout_height="35dp"
                            android:background="@color/colorMain"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/notosansb"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="평균 공부 시간"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            />

                        <TextView
                            android:id="@+id/avgTV"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:textColor="@color/colorMain"
                            android:fontFamily="@font/pen"
                            android:background="@drawable/stroke_top_bottom"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:elevation="5dp">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="과목별 공부 시간"
                        android:textColor="#fff"
                        android:fontFamily="@font/notosansb"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:background="@color/colorMain"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/stroke_top_bottom">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="250dp"
                                android:layout_height="140dp"
                                android:textColor="@color/colorMain"
                                android:paddingTop="10dp"
                                android:textSize="30dp"
                                android:fontFamily="@font/pen"
                                android:gravity="center|top" />

                        </ScrollView>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="290dp"
                    android:background="@drawable/pin_blue"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="290dp"
                    android:background="@drawable/pin_blue"/>




            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



    </LinearLayout>


    <View
        android:layout_width="60dp"
        android:layout_height="170dp"
        android:background="@drawable/sticker"
        android:rotation="230"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="340dp"/>

</RelativeLayout>