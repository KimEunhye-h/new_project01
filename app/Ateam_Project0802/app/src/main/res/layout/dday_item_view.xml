<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:weightSum="100"
    android:background="@drawable/noticebackground"
    >

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_weight="100"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.08dp"
        android:layout_weight="0.1"
        android:background="@drawable/block_color4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="99">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="제목"
            android:layout_weight="80"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/notosansb"/>

        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="오늘날짜"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:fontFamily="@font/notosansb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="50"
        android:weightSum="100">

        <TextView
            android:id="@+id/diff_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:text="D-DAY"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="@font/notosansb"/>

        <TextView
            android:id="@+id/d_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"

            android:text="D-DAY"
            android:gravity="center|top"
            android:textSize="12dp"
            android:textColor="@color/colorMain"
            android:fontFamily="@font/notosans"/>



        </LinearLayout>



    <Button
        android:id="@+id/more"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_weight="5"
        android:background="@drawable/dday_del_btn"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"/>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.08dp"
        android:layout_weight="0.1"
        android:background="@drawable/block_color4"/>

</LinearLayout>
    <!--<View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"/>-->

</LinearLayout>